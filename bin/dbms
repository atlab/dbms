#! /bin/sh

app="$0"
scr="${app##*/}"
dir="${app%/*}"
lib="${dir}/../lib"
libexec="${dir}/../libexec"

usage_exit() {
	echo "usage: $scr cmd <args>";
	echo "  where 'cmd' is one of:";
	echo "    start [serverno]";
	echo "    stop [serverno]";
	echo "    report [serverno]";
	echo "    shell [serverno]";
	echo "    admin [serverno]";
	echo "    cksum [serverno]";
	exit 0;
}

libexec_cmd() {
	cmd=$1; shift;
	exec $libexec/$cmd $*;
}

if [ "$#" -lt "1" ]; then
	usage_exit;
fi

verb=$1
shift;

get_socket() {
	# todo: parse my_print_defaults mysqld_multi -s
	serverno=$1
	case $serverno in
		"1") socket=/var/run/mysqld/mysqld1.sock;;
		"2") socket=/var/run/mysqld/mysqld2.sock;;
	esac
}

case $verb in
	"start")
		get_socket $1;
		exec mysqld_multi start $serverno;;
	"stop")
		get_socket $1;
		exec mysqld_multi stop $serverno;;
	"report")
		get_socket $1;
		exec mysqld_multi report $serverno;; 
	"shell")
		get_socket $1; shift;
		exec mysql -u root -S $socket $*;;
	"admin")
		get_socket $1; shift;
		exec mysqladmin -u root -S $socket $*;;
	"cksum")
		get_socket $1; shift;
		export MYSQL_SOCKET=$socket;
		libexec_cmd $verb $*;;
	*) usage_exit;;
esac

